<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>

<!-- about these variables: http://archive.cloudera.com/cdh/3/hadoop/core-default.html -->
<!-- modified by chef, changes will be overwritten -->
  
<property> <name>fs.default.name</name>              <value>hdfs://<%= @namenode_addr %>:8020/</value></property>

<property> <name>fs.checkpoint.dir</name>            <value><%= @dfs_2nn_dirs.join(",") %></value>             <final>true</final></property>
<property> <name>hadoop.tmp.dir</name>               <value><%= @hadoop_tmp_dir %>/hadoop-${user.name}</value> <final>true</final></property>

<property> <name>fs.trash.interval</name>            <value>1440</value>                                       <final>true</final></property>
<property> <name>io.file.buffer.size</name>          <value>65536</value></property>
<property> <name>io.compression.codecs</name>        <value>org.apache.hadoop.io.compress.DefaultCodec,org.apache.hadoop.io.compress.GzipCodec,org.apache.hadoop.io.compress.BZip2Codec,org.apache.hadoop.io.compress.DeflateCodec,org.apache.hadoop.io.compress.SnappyCodec</value></property>

<property> <name>webinterface.private.actions</name> <value>false</value> </property>

<property> <name>hadoop.rpc.socket.factory.class.default</name>               <value>org.apache.hadoop.net.StandardSocketFactory</value> <final>true</final></property>
<property> <name>hadoop.rpc.socket.factory.class.ClientProtocol</name>        <value></value> <final>true</final></property>
<property> <name>hadoop.rpc.socket.factory.class.JobSubmissionProtocol</name> <value></value> <final>true</final></property>

<%- unless @aws.nil? %>
<property> <name>fs.s3.awsAccessKeyId</name>         <value><%= node[:aws][:aws_access_key_id] %></value></property>
<property> <name>fs.s3n.awsAccessKeyId</name>        <value><%= node[:aws][:aws_access_key_id] %></value></property>
<property> <name>fs.s3.awsSecretAccessKey</name>     <value><%= node[:aws][:aws_secret_access_key] %></value></property>
<property> <name>fs.s3n.awsSecretAccessKey</name>    <value><%= node[:aws][:aws_secret_access_key] %></value></property>
<property> <name>fs.s3.block.size</name>             <value><%= node[:aws][:s3_block_size] %></value></property>
<property> <name>fs.s3n.block.size</name>            <value><%= node[:aws][:s3_block_size] %></value></property>
<%- end %>

</configuration>
